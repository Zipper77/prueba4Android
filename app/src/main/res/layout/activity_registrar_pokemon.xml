<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityRegistrarPokemon">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Registro de PokÃ©mon"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Nombre :"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/inputNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jigglypuff"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="- Stats -"
                android:textAlignment="center"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Ataque :"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/ataque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/ataqueAlto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alto"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/ataqueMediano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mediano" />

                    <RadioButton
                        android:id="@+id/ataqueBajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Bajo" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Vida :"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/vida"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/vidaAlto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alto" />

                    <RadioButton
                        android:id="@+id/vidaMediano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mediano" />

                    <RadioButton
                        android:id="@+id/vidaBajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Bajo" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Defensa :"
                    android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/defensa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/defensaAlto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alto" />

                    <RadioButton
                        android:id="@+id/defensaMediano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mediano" />

                    <RadioButton
                        android:id="@+id/defensaBajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Bajo" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="guardarAFB"
                android:text="Guardar" />

            <Button
                android:id="@+id/avistamientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="verAvistamientos"
                android:text="Mis Avistamientos" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>